{
  "manifest_version": 3,
  "name": "Defense against Distractions",
  "version": "1.0",
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "64": "icon-64.png",
      "128": "icon-128.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["keywordManager.js", "contentBlocker.js", "websiteGroupManager.js"]
    }
  ],
  "icons": {
    "16": "icon-16.png",
    "64": "icon-64.png",
    "128": "icon-128.png"
  }
}
